<h1>Chirps matching #<%= params[:hashtag] %></h1>
<% if @hashtagged %>
<div class="container post_container ">
  <h3>Blurbs</h3>
    <div class="blah  ">
        <% @hashtagged.each do |hashtagged| %>


        <div class="col-md-9 col-sm-9 col-xs-9  box">
          <% view    = hashtagged.class.to_s.underscore.pluralize %>
          <% partial = hashtagged.class.to_s.underscore %>

          <%= render "posts/post", {partial.to_sym => hashtagged} %>

        </div>
        <% end -%>

      </div>
    </div>

<% else -%>
  <p>There is no match for the <em><%= params[:hashtag] %></em> hashtag.</p>
<% end -%>
