<div class="new-post">


<%= form_for @post, url: posts_path do |f| %>
<div>
  <div class="input-field">
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
    <br>
  </div>
  <div class="input-field">
    <%= f.label :content %>
    <br><br>
    <%= f.text_area :content, class: 'text-area'%>
    <br>
  </div>

  <button class='btn' action='<%= f.submit  %>'>Create Entry
  </button>
  <% end %>
</div>
</div>
